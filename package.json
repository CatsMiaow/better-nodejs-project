{
  "name": "better-nodejs-project",
  "version": "0.0.0",
  "description": "Ways for a better Node.js backend project",
  "main": "dist/app",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "del-cli dist && nest build",
    "prepare": "husky install",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/app",
    "start:dev": "del-cli dist && nest start --watch",
    "start:debug": "del-cli dist && nest start --debug --watch",
    "release": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/platform-express": "^7.6.15",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@nestjs/cli": "^7.6.0",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-sonarjs": "^0.7.0",
    "eslint-plugin-unicorn": "^31.0.0",
    "husky": "^6.0.0",
    "standard-version": "^9.2.0",
    "typescript": "^4.2.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "CatsMiaow",
  "license": "UNLICENSED"
}
