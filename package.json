{
  "name": "better-nodejs-project",
  "version": "0.0.0",
  "description": "Ways for a better Node.js backend project",
  "main": "dist/app",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "del-cli dist && nest build",
    "prepare": "husky install",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/app",
    "start:dev": "del-cli dist && nest start --watch",
    "start:debug": "del-cli dist && nest start --debug --watch",
    "release": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@nestjs/cli": "^8.1.1",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "del-cli": "^4.0.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-unicorn": "^35.0.0",
    "husky": "^7.0.2",
    "standard-version": "^9.3.1",
    "typescript": "^4.4.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "CatsMiaow",
  "license": "UNLICENSED"
}
