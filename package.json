{
  "name": "better-nodejs-project",
  "version": "0.0.0",
  "description": "Ways for a better Node.js backend project",
  "main": "dist/app",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "del-cli dist && nest build",
    "prepare": "husky install",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/app",
    "start:dev": "del-cli dist && nest start --watch",
    "start:debug": "del-cli dist && nest start --debug --watch",
    "release": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^9.1.6",
    "@nestjs/core": "^9.1.6",
    "@nestjs/platform-express": "^9.1.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@nestjs/cli": "^9.1.4",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^8.0.1",
    "standard-version": "^9.5.0",
    "typescript": "^4.8.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "CatsMiaow",
  "license": "UNLICENSED"
}
