{
  "name": "better-nodejs-project",
  "version": "0.0.0",
  "description": "Ways for a better Node.js backend project",
  "main": "dist/app",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "del-cli dist && nest build",
    "prepare": "husky install",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/app",
    "start:dev": "del-cli dist && nest start --watch",
    "start:debug": "del-cli dist && nest start --debug --watch",
    "release": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.3",
    "@nestjs/core": "^8.2.3",
    "@nestjs/platform-express": "^8.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@nestjs/cli": "^8.1.5",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-sonarjs": "^0.11.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "husky": "^7.0.4",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "CatsMiaow",
  "license": "UNLICENSED"
}
